<div class="main">
  
  <!--bootstrap navbar-->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Honda Yossi</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort by Category<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% @categories.each do |category| %>
                  <li><a href="/cars?category=<%= category.id %>"><%= category.name.pluralize %></a></li>
                <% end %>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort by<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/cars">All</a></li>
                <li><a href="/cars?sort=price&order=asc">Price low to high</a></li>
                <li><a href="/cars?sort=price&order=desc">Price high to low</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/cars?discount=">Discount items</a></li>
                <li role="separator" class="divider"></li>
              </ul>
            </li>
          </ul>
          <%= form_tag "/cars", method: :get, class: "navbar-form navbar-left" do %>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          <% end %>
        
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><a href="/carts">Checkout</a></li>
            <% end %>
            <% if current_user && current_user.admin %>
              <li><a href="/cars/new">Add car</a></li>
            <% end %>
              <% if session[:user_id] %>
                <li><a href="/logout">Log out</a></li>
              <% else %>
                <li><a href="/login">Sign in</a></li>
              <% end %>
          </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
<!--end of navbar-->
  
  <% @cars.each_slice(3) do |three_cars| %>
  <div class="row">
    <%three_cars.each do |car|  %>
      <div class="col-md-4">
        <div class="well">
          <h2><%= car.make %> <%= car.model %></h2>
          <h4><%= car.year %></h4>
          <p><a href="/cars/<%= car.id %>"><img src="<%= car.images.first.url %>"></a></p>
          <h3>$<%= number_with_delimiter(car.price, :delimiter => ',') %></h3>
        </div>
      </div>
    <% end %> 
    </div>     
  <% end %>
</div> 